<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Eventid</th>
      <th>Date</th>
      <th>Time</th>
      <th>Location</th>
      <th>Gpslocation</th>
      <th>Completionstatus</th>
      <th>Description</th>
      <th>Starttime</th>
      <th>Endtime</th>
      <th>Totaltime</th>
      <th>Survey</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.eventID %></td>
        <td><%= event.date %></td>
        <td><%= event.time %></td>
        <td><%= event.location %></td>
        <td><%= event.GPSLocation %></td>
        <td><%= event.completionStatus %></td>
        <td><%= event.description %></td>
        <td><%= event.startTime %></td>
        <td><%= event.endTime %></td>
        <td><%= event.totalTime %></td>
        <td><%= event.survey %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>

<br>

<br>

<h2>Import Events</h2>

<%= form_tag import_events_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>