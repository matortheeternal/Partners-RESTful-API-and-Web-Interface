<h1>Listing schools</h1>

<table>
  <thead>
    <tr>
      <th>Idschool</th>
      <th>Nameschool</th>
      <th>Principal</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Phone</th>
      <th>Fax</th>
      <th>District</th>
      <th>Region</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.IDSchool %></td>
        <td><%= school.NameSchool %></td>
        <td><%= school.Principal %></td>
        <td><%= school.Street %></td>
        <td><%= school.City %></td>
        <td><%= school.State %></td>
        <td><%= school.Zip %></td>
        <td><%= school.Phone %></td>
        <td><%= school.Fax %></td>
        <td><%= school.District %></td>
        <td><%= school.Region %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Delete', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New School', new_school_path %>

<br>

<br>

<h2>Import Schools</h2>

<%= form_tag import_schools_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>
